extends ../layout/index
block contenido
    div.py-10
    <!- titulo->
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold=pagina
        <!- errores->
        if errores
            div(class='max-w-md mx-auto my-10')
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
        <!- campos de formulario->
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method='POST' action='/auth/recuperar-pass')
                    <!- input oculto para token de formulario->
                    input(type='hidden' name='_csrf' value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-400(placeholder="Ingrese su Email" type="email" name="email")
                    div.flex.items-center.justify-between
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 font-bold" type="submit" value="Recuperar")